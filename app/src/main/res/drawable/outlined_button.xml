<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Состояние нажатия -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#00FFFFFF" /> <!-- Прозрачный цвет при нажатии -->
            <stroke android:width="2dp" android:color="#FFFFFF" /> <!-- Белая рамка -->
            <corners android:radius="16dp" /> <!-- Радиус закругления углов -->
        </shape>
    </item>

    <!-- Обычное состояние -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00D0A0" /> <!-- Зелёный фон -->
            <stroke android:width="2dp" android:color="#FFFFFF" /> <!-- Белая рамка -->
            <corners android:radius="16dp" /> <!-- Радиус закругления углов -->
        </shape>
    </item>
</selector>