<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".StatisticMarkDavlenieFragment">

<com.google.android.material.button.MaterialButton
    android:id="@+id/statistic_mark_davlenie_add_data_button"
    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="60dp"
    android:layout_marginTop="32dp"
    android:layout_marginEnd="60dp"
    android:backgroundTint="#FFFFFF"

    android:elevation="4dp"
    android:fontFamily="sans-serif-medium"
    android:padding="16dp"
    android:text="Добавить данные"
    android:textColor="#00D0A0"

    android:textStyle="bold"
    app:backgroundTint="@android:color/transparent"
    app:cornerRadius="20dp"
    app:layout_constraintEnd_toEndOf="@+id/guideline10"
    app:layout_constraintStart_toStartOf="@+id/guideline9"
    app:layout_constraintTop_toTopOf="parent"
    app:strokeColor="#00D0A0"
    app:strokeWidth="2dp" />


<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/statistic_mark_davlenie_recycler_view"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_marginTop="16dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="@+id/guideline10"
    app:layout_constraintStart_toStartOf="@+id/guideline9"
    app:layout_constraintTop_toBottomOf="@+id/statistic_mark_davlenie_add_data_button" />

<androidx.constraintlayout.widget.Guideline
    android:id="@+id/guideline9"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintGuide_begin="20dp" />

<androidx.constraintlayout.widget.Guideline
    android:id="@+id/guideline10"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintGuide_end="20dp" />

</androidx.constraintlayout.widget.ConstraintLayout>