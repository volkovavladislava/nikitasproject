<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<androidx.constraintlayout.widget.ConstraintLayout
android:layout_width="match_parent"
android:layout_height="match_parent"

tools:context=".AddMarkDavlenieFragment">


    <TextView
        android:id="@+id/add_mark_davlenie_input_systolic_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Систолическое давление"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/guideline6"
        app:layout_constraintStart_toStartOf="@+id/guideline5"
        app:layout_constraintTop_toTopOf="parent"
         />

    <EditText
        android:id="@+id/add_mark_davlenie_input_systolic"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:backgroundTint="#00D0A0"
        android:drawablePadding="8dp"
        android:hint="120"
        android:inputType="number"
        android:textColor="#333333"
        android:textColorHint="#999999"
        app:layout_constraintEnd_toStartOf="@+id/guideline6"
        app:layout_constraintStart_toStartOf="@+id/guideline5"
        app:layout_constraintTop_toBottomOf="@+id/add_mark_davlenie_input_systolic_label" />

    <TextView
        android:id="@+id/add_mark_davlenie_input_diastolic_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Диастолическое давление"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/guideline6"
        app:layout_constraintStart_toStartOf="@+id/guideline5"
        app:layout_constraintTop_toBottomOf="@+id/add_mark_davlenie_input_systolic" />

    <EditText
        android:id="@+id/add_mark_davlenie_input_diastolic"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginTop="24dp"

        android:backgroundTint="#00D0A0"
        android:drawablePadding="8dp"
        android:hint="70"
        android:inputType="number"
        android:textColor="#333333"
        android:textColorHint="#999999"
        app:layout_constraintEnd_toStartOf="@+id/guideline6"
        app:layout_constraintStart_toStartOf="@+id/guideline5"
        app:layout_constraintTop_toBottomOf="@+id/add_mark_davlenie_input_diastolic_label" />


<TextView
    android:id="@+id/add_mark_davlenie_data_input_label"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="24dp"
    android:text="Дата"
    android:textSize="14sp"
    android:textStyle="bold"
    app:layout_constraintEnd_toStartOf="@+id/guideline6"
    app:layout_constraintStart_toStartOf="@+id/guideline5"
    app:layout_constraintTop_toBottomOf="@+id/add_mark_davlenie_input_diastolic" />

<EditText
    android:id="@+id/add_mark_davlenie_data_input"
    android:layout_width="0dp"
    android:layout_height="wrap_content"

    android:layout_marginTop="24dp"

    android:backgroundTint="#00D0A0"
    android:drawablePadding="8dp"
    android:hint="24.05.2024"
    android:inputType="date"
    android:textColor="#333333"
    android:textColorHint="#999999"
    app:layout_constraintEnd_toStartOf="@+id/guideline6"
    app:layout_constraintStart_toStartOf="@+id/guideline5"
    app:layout_constraintTop_toBottomOf="@+id/add_mark_davlenie_data_input_label" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/add_mark_davlenie_add_data_button"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="80dp"
        android:backgroundTint="#FFFFFF"

        android:elevation="4dp"
        android:fontFamily="sans-serif-medium"
        android:padding="16dp"
        android:text="Изменить дату"
        android:textColor="#00D0A0"

        android:textStyle="bold"
        app:backgroundTint="@android:color/transparent"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toStartOf="@+id/guideline6"
        app:layout_constraintStart_toStartOf="@+id/guideline5"
        app:layout_constraintTop_toBottomOf="@+id/add_mark_davlenie_data_input"
        app:strokeColor="#00D0A0"
        app:strokeWidth="2dp" />

    <Button
        android:id="@+id/add_mark_davlenie_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="50dp"
        android:backgroundTint="#00D0A0"
        android:elevation="4dp"
        android:fontFamily="sans-serif-medium"
        android:padding="16dp"
        android:text="ПОДТВЕРДИТЬ"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toStartOf="@+id/guideline6"
        app:layout_constraintStart_toStartOf="@+id/guideline5"
        app:layout_constraintTop_toBottomOf="@+id/add_mark_davlenie_add_data_button" />


